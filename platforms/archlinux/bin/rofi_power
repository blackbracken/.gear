#!/bin/bash

readonly SUSPEND="ðŸ”’ Lock"
readonly SHUTDOWN="âœ‚ Shutdown"
readonly REBOOT="âš– Reboot"

readonly ITEMS="$SUSPEND\n$SHUTDOWN\n$REBOOT"
readonly COMMAND="rofi -width 20 -dmenu -i -p power"

option=`echo -e $ITEMS | $COMMAND | tr -d '\r\n'`
if [ ${#option} -gt 0 ]; then
  case $option in
    "$SUSPEND" )
      light-locker-command -l ;;
    "$SHUTDOWN" )
      systemctl poweroff ;;
    "$REBOOT" )
      reboot ;;
    *)
      ;;
  esac
fi
